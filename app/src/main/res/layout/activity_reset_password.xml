<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="activiti.VanDeVeLogIn.ResetPassword"
    android:orientation="vertical"
    android:background="@drawable/login_background2" >
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolBarLaylaiMatKhau"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#CCFFFFFF">
    </androidx.appcompat.widget.Toolbar>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quên mật khẩu"
        android:textColor="@color/white"
        android:textSize="40dp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed"
        android:layout_gravity="center"
        android:layout_marginTop="65dp"
        android:drawableRight="@drawable/ic_lock_24"
        android:drawablePadding="8dp"
        android:layout_marginBottom="25dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_margin="30dp"
        android:background="@drawable/login_custom_dangnhap">
        <EditText
            android:id="@+id/edEmailLayPassWord"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:drawableLeft="@drawable/ic_email_24"
            android:textColorHighlight="@color/white"
            android:textColorHint="#99FFFFFF"
            android:textSize="20dp"
            android:textStyle="bold"
            android:drawablePadding="15dp"
            android:textColor="@color/white"
            android:fontFamily="serif-monospace"
            android:hint="Nhập Email" />
        <TextView
            android:id="@+id/tvThongBaoResetMK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="80dp"
            android:textSize="20dp"
            android:textColor="@color/color_selected_bottom_nav"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btnXacNhanResetPassWord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xác nhận"
            android:textAllCaps="false"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
</LinearLayout>


