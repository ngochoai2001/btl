<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_xacnhan_hoadon"
    android:layout_margin="16dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:gravity="center"
        android:background="@drawable/custom_dang_ki_thanhcong"
        android:text="Xác Nhận Đăng Kí"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:text="Bạn đã đăng kí thành công"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:drawableRight="@drawable/ic_true_24"
            android:drawablePadding="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:text="Vui lòng đăng nhập để sử dụng !"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"/>
    </RelativeLayout>
    <Button
        android:id="@+id/btLogin"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="OK"
        android:textAllCaps="false"
        android:background="#4FC886"
        android:textColor="@color/white"
        android:padding="12dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"/>

</LinearLayout>